[Unit]
Description=Jira Issue & Project Tracking Software
After=network.target

[Service]
Type=forking
User=jira
PIDFile=<%= node['jira']['install_path'] %>/work/catalina.pid
ExecStart=<%= node['jira']['install_path'] %>/bin/start-jira.sh
ExecStop=<%= node['jira']['install_path'] %>/bin/stop-jira.sh

[Install]
WantedBy=multi-user.target
